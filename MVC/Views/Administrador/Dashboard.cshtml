<link href="~/css/Dashboard.css" rel="stylesheet" type="text/css">
@model MVC.ViewModels.DashboardViewModel
    <main>
        <h2>Dashboard</h2>
        <section id="status-pedidos">
            <h3>Status dos eventos</h3>
            <div id="painel">
                <div class="box-status-pedidos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.AgendamentosAprovados</p>
                </div>
                <div class="box-status-pedidos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.AgendamentosPendentes</p>
                </div>
                <div class="box-status-pedidos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.AgendamentosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-pedidos">
            <h3>Lista de eventos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">Informações</th>
                        <th colspan="2">Serviços adicionais e preço total</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <tr>
                        <th><i class="fas fa-hammer"></i></th>
                        <th><i class="fas fa-dollar-sign"></i></th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Agendamentos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var agendamento in Model.Agendamentos )
                    {
                        <tr>
                            <td>@agendamento.NomeEvento</td>
                            <td>@agendamento.DescricaoEvento</td>
                            <td>@agendamento.Servicos.</td>
                            <td>@agendamento.PrecoTotal</td>
                            <td><a href='@Url.Action("Aprovar", "Alugar", new {id = @agendamento.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Alugar", new {id = @agendamento.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>